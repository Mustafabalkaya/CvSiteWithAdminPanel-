@using cv.Models.Entity
@model List<TblEgitimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isUserLoggedIn = User.Identity.IsAuthenticated;
    int count = 0;
}

<br />
<h2>Eğitim Listesi</h2>
<br />
<table class="table table-bordered">
    <tr style="background-color:#808080">
        <th>#</th>
        <th>Kurum</th>
        <th>Bölüm</th>
        <th>Alan</th>
        <th>GNO</th>
        <th>Tarih</th>
        @if (isUserLoggedIn)
        {

            <th>Sil</th>
            <th>Düzenle</th>
        }
    </tr>
    @foreach (var x in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@x.BASLIK</td>
            <td>@x.ALTBASLIK1</td>
            <td>@x.ALTBASLIK2</td>
            <td>@x.GNO</td>
            <td>@x.TARIH</td>
            @if (isUserLoggedIn)
            {

                <td>
                    <a href="/Egitim/EgitimSil/@x.ID" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                        Sil
                    </a>
                </td>
                <td>
                    <a href="/Egitim/EgitimDuzenle/@x.ID" class="btn btn-info btn-sm">
                        <i class="fas fa-pencil-alt"></i>
                        Düzenle
                    </a>
                </td>
            }
        </tr>
    }
</table>
@if (isUserLoggedIn)
{

    <a href="/Egitim/EgitimEkle/" class="btn btn-primary">Yeni Egitim Ekle</a>}