@using cv.Models.Entity
@model List<TblYeteneklerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{string renk = "";}
@{string labelrenk = "";
    int count = 0;
    }

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Main content --><br />
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Yetenek Listesi</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <a href="/Yetenek/YeniYetenek/" class="btn btn-info">Yeni Yetenek Ekle</a><br /><br />
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 5%">#</th>
                                        <th style="width: 25%">YETENEK</th>
                                        <th style="width: 36%">DERECE</th>
                                        <th style="width: 5%">ORAN</th>
                                        <th style="width: 8%">DÜZENLE</th>
                                        <th style="width: 6%">SİL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in Model)
                                    {
                                        count++;
                                        if (x.ORAN >= 0 && x.ORAN <= 50)
                                        {
                                            renk = "progress-bar bg-danger";
                                            labelrenk = "badge bg-danger";
                                        }
                                        if (x.ORAN >= 51 && x.ORAN <= 70)
                                        {
                                            renk = "progress-bar bg-warning";
                                            labelrenk = "badge bg-warning";
                                        }
                                        if (x.ORAN >= 71 && x.ORAN <= 84)
                                        {
                                            renk = "progress-bar bg-primary";
                                            labelrenk = "badge bg-primary";
                                        }
                                        if (x.ORAN >= 85 && x.ORAN <= 100)
                                        {
                                            renk = "progress-bar bg-success";
                                            labelrenk = "badge bg-success";
                                        }
                                        <tr>
                                            <td>@count</td>
                                            <td>@x.YETENEK</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@renk" style="width: @x.ORAN%"></div>
                                                </div>
                                            </td>
                                            <td><span class="@labelrenk">@x.ORAN%</span></td>
                                            <td>
                                                <a href="/Yetenek/YetenekDuzenle/@x.ID" class="btn btn-info btn-sm">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    Düzenle
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Yetenek/YetenekSil/@x.ID" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</body>
</html>