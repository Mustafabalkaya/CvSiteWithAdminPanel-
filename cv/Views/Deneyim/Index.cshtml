@using cv.Models.Entity
@model List<TblDeneyimlerim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    bool isUserLoggedIn = User.Identity.IsAuthenticated;
    int count = 0;
}

<br />
<h2>Deneyim Listesi</h2>
<br />
<table class="table table-bordered">
    <tr style="background-color:#808080">
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Tarih</th>
        @if (isUserLoggedIn)
        {
            <th>Sil</th>
            <th>Düzenle</th>
        }

    </tr>
    @foreach (var x in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@x.BASLIK</td>
            <td>@x.ALTBASLIK</td>
            <td>@x.TARIH</td>
            @if (isUserLoggedIn)
            {
                <td><a href="/Deneyim/DeneyimSil/@x.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Deneyim/DeneyimGetir/@x.ID" class="btn btn-warning">Düzenle</a></td>
            }
        </tr>
    }
</table>
@if (isUserLoggedIn) { 
<a href="/Deneyim/DeneyimEkle/" class="btn btn-primary">Yeni Deneyim Ekle</a>}